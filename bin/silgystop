#!/bin/sh

echo "Stopping Silgy..."

# ---------------------------------------------------------------------
# Services

if [ -n "$(find $SILGYDIR/bin -name 's_*.pid' | head -1)" ]
then
    for f in $SILGYDIR/bin/s_*.pid
    do
        kill `cat ${f}`
    done

    sleep 1
fi

# ---------------------------------------------------------------------
# Main app

if [ -f $SILGYDIR/bin/silgy_app.pid ]
then
    kill `cat $SILGYDIR/bin/silgy_app.pid`
fi

# ---------------------------------------------------------------------

echo "Done"
