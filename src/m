#!/bin/sh


cd ../bin
silgystop
cd ../src


echo Making silgy_app...

g++ silgy_app.cpp \
../lib/silgy_eng.c ../lib/silgy_lib.c ../lib/silgy_usr.c \
-I. -I../lib \
-lrt \
-s -O3 \
-o ../bin/silgy_app


echo Making silgy_svc...

g++ silgy_svc.cpp \
../lib/silgy_eng.c ../lib/silgy_lib.c ../lib/silgy_usr.c \
-D SILGY_SVC \
-I. -I../lib \
-lrt \
-s -O3 \
-o ../bin/silgy_svc


echo Making silgy_watcher...

gcc ../lib/silgy_watcher.c \
../lib/silgy_lib.c \
-D SILGY_WATCHER \
-I. -I../lib \
-s -O3 \
-o ../bin/silgy_watcher

#cd ../bin
#silgystart
#cd ../src
